<LinearLayout 
    android:id="@+id/halcyon_system_opt"
    android:orientation="vertical" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="96dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <LinearLayout 
        android:orientation="vertical" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
        
        <LinearLayout 
            android:orientation="horizontal" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            <LinearLayout 
                android:id="@+id/language_settings"
                android:background="@drawable/tile_pref_background"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="20.0dip" 
                android:paddingBottom="20.0dip" 
                android:layout_marginLeft="@dimen/halcyon_card_side_margin"
                android:paddingStart="@dimen/halcyon_system_tile_content_margin" 
                android:paddingEnd="@dimen/halcyon_system_tile_content_margin"
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1">
                    <ImageView
                        android:src="@drawable/ic_halcyon_language"
                        android:layout_width="@dimen/halcyon_system_menu_icons"
                        android:layout_height="@dimen/halcyon_system_menu_icons" />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="@string/languages_settings"
                        android:paddingStart="@dimen/halcyon_system_tile_content_margin" 
                        android:paddingEnd="@dimen/halcyon_system_tile_content_margin"
                        style="@style/TextAppearance.halcyonTileTitle"/>
            </LinearLayout>

            <LinearLayout 
                android:id="@+id/keyboard_settings"
                android:background="@drawable/tile_pref_background"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="20.0dip" 
                android:paddingBottom="20.0dip" 
                android:layout_marginLeft="@dimen/halcyon_system_menu_margin" 
                android:layout_marginRight="@dimen/halcyon_card_side_margin"
                android:paddingStart="@dimen/halcyon_system_tile_content_margin" 
                android:paddingEnd="@dimen/halcyon_system_tile_content_margin"
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1">
                    <ImageView
                        android:src="@drawable/ic_halcyon_keyboard"
                        android:layout_width="@dimen/halcyon_system_menu_icons"
                        android:layout_height="@dimen/halcyon_system_menu_icons" />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="@string/keyboard_settings"
                        android:paddingStart="@dimen/halcyon_system_tile_content_margin" 
                        android:paddingEnd="@dimen/halcyon_system_tile_content_margin"
                        style="@style/TextAppearance.halcyonTileTitle"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout 
            android:orientation="horizontal" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <LinearLayout 
                android:id="@+id/time_settings"
                android:background="@drawable/tile_pref_background"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="20.0dip" 
                android:paddingBottom="20.0dip" 
                android:layout_marginLeft="@dimen/halcyon_card_side_margin"
                android:paddingStart="@dimen/halcyon_system_tile_content_margin" 
                android:paddingEnd="@dimen/halcyon_system_tile_content_margin"
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1">
                    <ImageView
                        android:src="@drawable/ic_halcyon_time"
                        android:layout_width="@dimen/halcyon_system_menu_icons"
                        android:layout_height="@dimen/halcyon_system_menu_icons" />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="@string/date_and_time"
                        android:paddingStart="@dimen/halcyon_system_tile_content_margin" 
                        android:paddingEnd="@dimen/halcyon_system_tile_content_margin"
                        style="@style/TextAppearance.halcyonTileTitle"/>
            </LinearLayout>

            <LinearLayout 
                android:id="@+id/gesture_settings"
                android:background="@drawable/tile_pref_background"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="20.0dip" 
                android:paddingBottom="20.0dip" 
                android:layout_marginLeft="@dimen/halcyon_system_menu_margin" 
                android:layout_marginRight="@dimen/halcyon_card_side_margin"
                android:paddingStart="@dimen/halcyon_system_tile_content_margin" 
                android:paddingEnd="@dimen/halcyon_system_tile_content_margin"
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1">
                    <ImageView
                        android:src="@drawable/ic_halcyon_gesture"
                        android:layout_width="@dimen/halcyon_system_menu_icons"
                        android:layout_height="@dimen/halcyon_system_menu_icons" />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="@string/gesture_preference_title"
                        android:paddingStart="@dimen/halcyon_system_tile_content_margin" 
                        android:paddingEnd="@dimen/halcyon_system_tile_content_margin"
                        style="@style/TextAppearance.halcyonTileTitle"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
