<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/halcyon_card_side_margin"
    android:layout_marginTop="@dimen/halcyon_vertical_padding"
    android:layout_marginBottom="@dimen/halcyon_vertical_padding"
    app:cardCornerRadius="@dimen/halcyon_card_radius"
    app:cardElevation="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.android.settings.halcyon.about.WallpaperBlurView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:elevation="0dp"
            android:gravity="center"
            android:orientation="vertical" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.1"
            android:src="@drawable/ui_scrim"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="@dimen/halcyon_cool_branding_half_height">

            <TextView
                android:id="@+id/cool_branding_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/very_cool_branding"
                style="@style/TextAppearance_halcyonCoolBranding"/>

        </LinearLayout>
    </FrameLayout>
</com.google.android.material.card.MaterialCardView>