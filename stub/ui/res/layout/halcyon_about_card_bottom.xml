<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bottom_background_ripple"
    android:layout_marginBottom="@dimen/halcyon_vertical_padding"
    android:layout_marginHorizontal="@dimen/halcyon_cardview_padding"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_marginVertical="@dimen/halcyon_pref_vert"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@id/icon_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp">

            <androidx.preference.internal.PreferenceImageView
                android:id="@android:id/icon"
                android:layout_width="0dip"
                android:layout_height="0dip"
                android:visibility="gone"
                app:maxHeight="0dip"
                app:maxWidth="0dip" />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/halcyon_cardview_margin_list"
            android:layout_marginBottom="@dimen/halcyon_cardview_margin_list"
            android:layout_weight="1.0"
            android:layout_marginEnd="@dimen/halcyon_cardview_padding">
            <TextView
                android:id="@android:id/title"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/halcyon_cardview_padding"
                android:paddingEnd="128dp"
                android:singleLine="true"
                android:maxLines="1"
                style="@style/halcyon_about_cardview_text_primary" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"/>

            <TextView
                android:id="@android:id/summary"
                android:ellipsize="marquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingStart="128dp"
                android:gravity="center_vertical"
                android:layout_marginStart="18dp"
                android:maxLines="1"
                style="@style/halcyon_about_cardview_text_secondary"/>

        </RelativeLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@android:id/widget_frame"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"/>
    </LinearLayout>
</LinearLayout>